<div class="row">
  <div class="gravatar">
    <h1>Редактирование пользователя</h1>
    
  	<%= form_for(@user) do |f| %>
  	  <%= render 'shared/error_messages', :object => f.object %>

  	  <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label "Почтовый ящик" %>
      <%= f.text_field :email %>

      <%= f.label "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Редактировать аккаунт", class: "btn btn-large btn-primary" %>
      <%= link_to "Назад", users_path, class: "btn btn-large btn-primary" %>

    <% end %>


  </div>
</div>